<h1>Login</h1>

<%= form_for(:session, url: login_path) do |f| %>

  <p>
    <%= f.label :email %><br />
    <%= f.email_field :email, placeholder: "Enter Email" %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password, placeholder: "Enter Password" %>
  </p>
  <p>
    <%= f.submit "Log In" %>
  </p>

  <% end %>

  <%= link_to "Back to articles listing", articles_path %>
