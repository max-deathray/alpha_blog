<h1>Users.</h1>

<%= will_paginate %>
<table>
  <% @users.each do |user| %>
  <tr>
    <td><%= link_to gravatar_for(user), user_path(user)%></td>
    <td><%= link_to user.username, user_path(user)%><%= %></td>
    <td><%= pluralize(user.articles.count, "article") if user.articles %><%= %></td>
  </tr>
  <% end %>
</table>
<%= will_paginate %>
